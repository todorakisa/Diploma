{% extends '/home/base.html.twig' %}
{% block title %}About{% endblock %}
{% block sidebar %}
    <a style="pointer-events: none; cursor: default;" id = "exception"> <img src="{{ asset('build/images/logo.png') }}" width="108" height="46" style="vertical-align: middle"> </a>
    <a href="/BoardFind/Home">Home</a>
    <a href="/BoardFind">Events & People</a>
    <a href="/BoardFind/Trade">Trade</a>
    <a href="#chat">Chat</a>
    {% if app.session.has('id') == true %}
        <a class="active" href="/BoardFind/Account">Account</a>
    {% endif %}
    <a href="/BoardFind/About">About us</a>
{% endblock %}
{% block pageContent %}
    <div class = "divide">
        <div class="contain">
            <img src="{{ asset('build/images/87h.jpg') }}" class="profileimage">
            <span class="lay">
                <span class="changepic">Change picture</span>
            </span>
        </div>

        <div class = "contain2">
            Name: &nbsp {{ getNameOfUser(app.session.get('id')) }} {{ getLastNameOfUser(app.session.get('id')) }}
            <div class = "pencils"> </div>
            <br><br>
            Username: &nbsp {{ userIdInformation(app.session.get('id')) }}
            <div class = "pencils"> </div>
            <br><br>
            Email: &nbsp {{ getEmailOfUser(app.session.get('id')) }}
            <div class = "pencils"> </div>
            <br><br>
            Phone: &nbsp {{ getPhoneOfUser(app.session.get('id')) }}
            <div class = "pencils"> </div>
        </div>
    </div>
    <br><br>

    <div align = "center">
        <a href = "/BoardFind/DeleteUser/{{ app.session.get('id') }}"><button class = "create3 delete"><b>Delete Account</b></button></a>
    </div>
{% endblock %}