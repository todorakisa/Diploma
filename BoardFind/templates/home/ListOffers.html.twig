{% extends '/home/base.html.twig' %}
{% block title %}Offers{% endblock %}
{% block sidebar %}
    <a style="pointer-events: none; cursor: default;" id = "exception"> <img src="{{ asset('build/images/logo.png') }}" width="108" height="46" style="vertical-align: middle"> </a>
    <a href="/BoardFind/Home">Home</a>
    <a href="/BoardFind/EventsAndPeople">Events & People</a>
    <a class="active" href="/EventsAndPeople/Trade">Trade</a>
    <a href="/BoardFind/Trade">Chat</a>
    {% if app.session.has('id') == true %}
        <a href="/BoardFind/Account">Account</a>
    {% endif %}
    <a href="/BoardFind/About">About us</a>
{% endblock %}
{% block pageContent %}
    <p align = "center">
        <span class="tradetitle"> Trading Games </span>
    </p>
    <br>
    {% if app.session.has('id') == false %}
    <div id="Modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p class="alert-success"> You must be logged to our site to use that function,
                If you're not registered register <a href="/BoardFind/Register">here</a> </p>
        </div>
    </div>
    <div align = "center">
        <button id = "catch" class = "create3 button11" ><b>+ Create an Offer</b></button>
    </div>
    <br>
    {% else %}
    <div align = "center">
        <a href = "/BoardFind/Trade/RegisterOffer" ><button id = "catch" class = "create3 button11" ><b>+ Create an Offer</b></button></a>
    </div>
    <br>
    {% endif %}

    <div class = "transbox3">
        {% for key,offer in arrayOfOffers %}
            {% if offer.isdeleted == false %}
        <br>
        <p class = "trade">
            <img class= "boardpic" src="{{ asset('build/images/trump.jpg') }}"> {{  offer.title }}
            <span class = "gameprice"> {{  offer.price }}$ </span>
            <a href = "/BoardFind/Offer/{{ offer.id }}" ><button class= "create2 button8"><b>Details</b></button></a>
        </p>
        <br>
            {% endif %}
        {% endfor %}
    </div>
    <br>
{% endblock %}