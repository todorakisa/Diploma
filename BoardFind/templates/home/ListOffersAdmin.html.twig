{% extends '/home/base.html.twig' %}
{% block title %}About{% endblock %}
{% block sidebar %}
    <a style="pointer-events: none; cursor: default;" id = "exception"> <img src="{{ asset('build/images/logo.png') }}" width="108" height="46" style="vertical-align: middle"> </a>
    <a href="/BoardFind/Home">Home</a>
    <a href="/BoardFind">Events & People</a>
    <a href="/BoardFind/Trade">Trade</a>
    <a href="#chat">Chat</a>
    <a href="/BoardFind/Account">Account</a>
    <a href="/BoardFind/About">About us</a>
{% endblock %}
{% block active %}
    <a class="active" href="/BoardFind/Admin"> Admin Pannel </a>
{% endblock %}
{% block pageContent %}
    <p align = "center">
        <span class="tradetitle"> Offers </span>
    </p>
    <br>

    <div class = "transbox3">
        {% for key,offer in arrayOfOffers %}
            <br>
            <p class = "trade">
                <img class= "boardpic" src="{{ asset('build/images/trump.jpg') }}"> {{  offer.title }}
                <span class = "gameprice"> {{  offer.price }}$ </span>
                <a href = "/BoardFind/Admin/EditOffer/{{ offer.id }}" ><button class= "create2 button8"><b>Edit</b></button></a>
                <a href="/BoardFind/Admin/DeleteOffer/{{ offer.id}}" ><button class= "create3 delete"><b>Delete</b></button></a>
            </p>
            <br>
        {% endfor %}
    </div>
    <br>
{% endblock %}